{
  "name": "react-native-track-player",
  "version": "2.1.4",
  "description": "A fully fledged audio module created for music apps",
  "main": "lib/module/index.js",
  "types": "lib/typescript/src/index.d.ts",
  "scripts": {
    "build": "del-cli lib && tsc",
    "lint": "eslint \"**/*.{js,ts,tsx}\"",
    "test": "jest",
    "typecheck": "tsc",
    "codegen": "react-native codegen --platform all",
    "clean": "del-cli android/build example/android/build example/android/app/build example/ios/build lib",
    "prepare": "bob build"
  },
  "files": [
    "src",
    "lib",
    "android",
    "ios",
    "cpp",
    "*.podspec",
    "react-native.config.js",
    "!ios/build",
    "!android/build",
    "!android/gradle",
    "!android/gradlew",
    "!android/gradlew.bat",
    "!android/local.properties",
    "!**/__tests__",
    "!**/__fixtures__",
    "!**/__mocks__",
    "!**/.*"
  ],
  "contributors": [
    {
      "name": "David Chavez",
      "email": "david@dcvz.io",
      "url": "http://dcvz.io"
    },
    {
      "name": "Guilherme Chaguri",
      "email": "guichaguri@gmail.com",
      "url": "http://guichaguri.com"
    },
    {
      "name": "Dustin Bahr",
      "email": "dustin@curiousmedia.com"
    }
  ],
  "keywords": [
    "react",
    "react-native",
    "track-player",
    "audio-player",
    "audio",
    "player",
    "music",
    "controls",
    "chromecast",
    "android",
    "ios",
    "hooks"
  ],
  "license": "Apache-2.0",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ffalt/react-native-track-player.git"
  },
  "homepage": "https://github.com/ffalt/react-native-track-player#readme",
  "peerDependencies": {
    "react": "*",
    "react-native": "*"
  },
  "devDependencies": {
    "@commitlint/config-conventional": "19.6.0",
    "@eslint/compat": "1.2.7",
    "@eslint/eslintrc": "3.3.0",
    "@eslint/js": "^9.22.0",
    "@react-native-community/cli": "15.0.0-alpha.2",
    "@react-native/babel-preset": "0.81.0",
    "@react-native/eslint-config": "0.81.1",
    "@react-native/typescript-config": "0.81.1",
    "@types/jest": "29.5.5",
    "@types/react": "19.1.0",
    "del-cli": "5.1.0",
    "eslint": "9.34.0",
    "jest": "29.7.0",
    "react": ">=19.1.0",
    "react-native": ">=0.81.1",
    "react-native-builder-bob": "0.40.13",
    "turbo": "1.10.7",
    "typescript": "5.9.2",
    "typescript-eslint": "8.41.0"
  },
  "packageManager": "yarn@4.9.4",
  "jest": {
    "preset": "react-native",
    "modulePathIgnorePatterns": [
      "<rootDir>/example/node_modules",
      "<rootDir>/lib/"
    ]
  },
  "react-native-builder-bob": {
    "source": "src",
    "output": "lib",
    "targets": [
      [
        "module",
        {
          "esm": true
        }
      ],
      [
        "typescript",
        {
          "project": "tsconfig.build.json"
        }
      ]
    ]
  },
  "codegenConfig": {
    "name": "TrackPlayerSpec",
    "type": "modules",
    "jsSrcsDir": "src",
    "android": {
      "javaPackageName": "com.guichaguri.trackplayer"
    },
    "ios": {
      "modulesProvider": {
        "NativeTrackPlayer": "TrackPlayer"
      }
    }
  },
  "create-react-native-library": {
    "languages": "kotlin-objc",
    "type": "turbo-module",
    "version": "0.53.0"
  }
}
